# Azure Environment Variables Template
# Copy this file to .env.azure and fill in the actual values

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://m3wadmin:YOUR_PASSWORD@m3w-postgres-XXXXX.postgres.database.azure.com:5432/m3w?sslmode=require

# ==========================================
# Redis Configuration (Optional - not included in default deployment)
# ==========================================
# REDIS_URL=rediss://:YOUR_REDIS_KEY@m3w-redis-XXXXX.redis.cache.windows.net:6380

# ==========================================
# Azure Blob Storage
# ==========================================
AZURE_STORAGE_ACCOUNT_NAME=m3wstorageXXXXX
AZURE_STORAGE_ACCOUNT_KEY=YOUR_STORAGE_KEY
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=m3wstorageXXXXX;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=music

# ==========================================
# NextAuth.js Configuration
# ==========================================
NEXTAUTH_URL=https://m3w-app.REGION.azurecontainerapps.io
NEXTAUTH_SECRET=YOUR_PRODUCTION_SECRET_HERE_AT_LEAST_32_CHARS

# ==========================================
# GitHub OAuth
# ==========================================
GITHUB_CLIENT_ID=your_production_github_client_id
GITHUB_CLIENT_SECRET=your_production_github_client_secret

# ==========================================
# Application Insights (Optional - included in deployment)
# ==========================================
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=XXXXX;IngestionEndpoint=https://REGION.in.applicationinsights.azure.com/

# ==========================================
# Node Environment
# ==========================================
NODE_ENV=production

# ==========================================
# Azure Container Registry
# ==========================================
# These are used by GitHub Actions
AZURE_REGISTRY=m3wacrXXXXX.azurecr.io
AZURE_REGISTRY_USERNAME=m3wacrXXXXX
AZURE_REGISTRY_PASSWORD=YOUR_ACR_PASSWORD

# ==========================================
# Azure Subscription & Resource Group
# ==========================================
AZURE_SUBSCRIPTION_ID=YOUR_SUBSCRIPTION_ID
AZURE_RESOURCE_GROUP=m3w-rg
AZURE_LOCATION=eastasia

# ==========================================
# Feature Flags (Optional)
# ==========================================
ENABLE_TELEMETRY=true
ENABLE_REDIS_CACHE=true
ENABLE_OFFLINE_MODE=true

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true
