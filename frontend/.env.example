# Vite Frontend Environment Variables
# All variables must be prefixed with VITE_ to be exposed to the browser

# Backend API URL (development)
VITE_API_URL=http://localhost:4000

# Backend API URL (production)
# VITE_API_URL=https://api.example.com

# Demo mode: controls demo feature detection API calls
# - true:  Enable demo mode detection (calls /api/demo/storage)
# - false: Disable demo mode (no API calls, no demo banner)
# - unset: Follows BUILD_TARGET (rc=enabled, prod=disabled)
VITE_DEMO_MODE=false
