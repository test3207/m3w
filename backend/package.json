{
  "name": "@m3w/backend",
  "version": "2.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --watch-path=./src --import tsx src/index.ts",
    "build": "tsup",
    "build:rc": "cross-env BUILD_TARGET=rc tsup",
    "build:prod": "cross-env BUILD_TARGET=prod tsup",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.6",
    "@m3w/shared": "file:../shared",
    "@prisma/client": "^6.19.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "formidable": "^3.5.4",
    "hono": "^4.11.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "minio": "^8.0.6",
    "music-metadata": "^11.10.3",
    "node-cron": "^4.2.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "pinyin-pro": "^3.27.0",
    "undici": "^7.16.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/formidable": "^3.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.2",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "prisma": "^6.19.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
